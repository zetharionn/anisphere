{
	"name": "anisphere",
	"private": true,
	"description": "Blazing space to dive into your favorite anime with ease",
	"author": "zetharionn",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"build:frontend": "turbo build --filter=frontend",
		"build:backend": "turbo build --filter=backend",
		"build:docs": "turbo build --filter=docs",
		"build:aniui": "turbo build --filter=aniui",
		"dev": "turbo dev",
		"dev:frontend": "turbo dev --filter=frontend",
		"dev:backend": "turbo dev --filter=backend",
		"dev:docs": "turbo dev --filter=docs",
		"dev:aniui": "turbo dev --filter=aniui",
		"lint": "turbo lint",
		"lint:frontend": "turbo lint --filter=frontend",
		"lint:backend": "turbo lint --filter=backend",
		"lint:docs": "turbo lint --filter=docs",
		"lint:aniui": "turbo lint --filter=aniui",
		"test": "turbo test",
		"test:frontend": "turbo test --filter=frontend",
		"test:backend": "turbo test --filter=backend"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.2.3"
	},
	"homepage": "https://github.com/zetharionn/anisphere",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zetharionn/anisphere"
	},
	"bugs": {
		"url": "https://github.com/zetharionn/anisphere/issues"
	},
	"keywords": ["monorepo", "anisphere"],
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18"
	}
}
