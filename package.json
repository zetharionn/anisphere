{
	"name": "anisphere",
	"private": true,
	"description": "Blazing space to dive into your favorite anime with ease",
	"author": "zetharionn",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"build:apps": "turbo build -F=frontend -F=backend -F=docs",
		"build:frontend": "turbo build -F=frontend",
		"build:backend": "turbo build -F=backend",
		"build:docs": "turbo build -F=docs",
		"build:packages": "turbo build -F=aniui -F=aniapi",
		"build:aniui": "turbo build -F=aniui",
		"build:aniapi": "turbo build -F=aniapi",
		"dev": "turbo dev",
		"dev:apps": "turbo dev -F=frontend -F=backend -F=docs",
		"dev:frontend": "turbo dev -F=frontend",
		"dev:backend": "turbo dev -F=backend",
		"dev:docs": "turbo dev -F=docs",
		"dev:packages": "turbo dev -F=aniui -F=aniapi",
		"dev:aniui": "turbo dev -F=aniui",
		"dev:aniapi": "turbo dev -F=aniapi",
		"lint": "turbo lint",
		"lint:apps": "turbo lint -F=frontend -F=backend -F=docs",
		"lint:frontend": "turbo lint -F=frontend",
		"lint:backend": "turbo lint -F=backend",
		"lint:docs": "turbo lint -F=docs",
		"lint:packages": "turbo lint -F=aniui -F=aniapi",
		"lint:aniui": "turbo lint -F=aniui",
		"lint:aniapi": "turbo lint -F=aniapi",
		"test": "turbo test",
		"test:apps": "turbo test -F=frontend -F=backend",
		"test:frontend": "turbo test -F=frontend",
		"test:backend": "turbo test -F=backend",
		"test:packages": "turbo test -F=aniui",
		"test:aniapi": "turbo test -F=aniapi"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.2.3"
	},
	"homepage": "https://github.com/zetharionn/anisphere",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zetharionn/anisphere"
	},
	"bugs": {
		"url": "https://github.com/zetharionn/anisphere/issues"
	},
	"keywords": ["monorepo", "anisphere"],
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=20.x"
	}
}
